                <select asp-for="National_id"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.IDlist,"National_id","Full_names"))">
                </select>


                <label asp-for="National_id" class="control-label"></label>
                <input asp-for="National_id" class="form-control" />
