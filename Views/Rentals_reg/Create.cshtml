            </div>
            <div class="form-group">
                <label asp-for="R_name" class="control-label"></label>
                <input asp-for="R_name" class="form-control" />
                <span asp-validation-for="R_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="R_location" class="control-label"></label>
                <input asp-for="R_location" class="form-control" />
                <span asp-validation-for="R_location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="No_rooms" class="control-label"></label>
                <input asp-for="No_rooms" class="form-control" />
                <span asp-validation-for="No_rooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
